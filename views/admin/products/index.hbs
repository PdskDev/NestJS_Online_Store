{{#> admin}}
{{#*inline "content"}}
<!--Create product form-->
<div class="card mb-4">
    <div class="card-header">
        Create new product
    </div>
    <div class="card-body">
        {{#if flashErrors}}
        {{#each flashErrors}}
        <p class="alert alert-danger">{{this}}</p>
        {{/each}}
        {{/if}}
        <form action="products/store" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col">
                <div class="row mb-3">
                    <label for="name" class="col-lg-2 col-md-6 col-sm-12 col-form-label">Name:</label>
                    <div class="col-lg-10 col-md-6 col-sm-12">
                        <input type="text" name="name" id="name" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row mb-3">
                    <label for="price" class="col-lg-2 col-md-6 col-sm-12 col-form-label">Price:</label>
                    <div class="col-lg-10 col-md-6 col-sm-12">
                        <input type="text" name="price" id="price" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="row mb-3">
                    <label for="image" class="col-lg-2 col-md-6 col-sm-12 col-form-label">Image:</label>
                    <div class="col-lg-10 col-md-6 col-sm-12">
                        <input type="file" class="form-control" name="image">
                    </div>
                </div>
            </div>
            <div class="col">&nbsp;</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" rows="3" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add New Product</button>
        </form>
    </div>
</div>

<!--List products-->
    <div class="card">
        <div class="card-header">
            Manage Products
        </div>
        <div class="card-body">
           <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each viewData.products}}
                <tr>
                    <td>{{getId}}</td>
                    <td>
                        <img src="/uploads/{{getImage}}" alt="Product {{getName}}" class="card-img-top img-card img-fluid">
                    </td>
                    <td>{{getName}}</td>
                    <td>
                        <a class="btn btn-primary" href="/admin/products/{{getId}}">
                            <i class="bi-pencil"></i>
                        </a>
                    </td>
                    <td>
                        <form action="products/{{getId}}" method="POST">
                        <button class="btn btn-danger">
                            <i class="bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
           </table>
        </div>
    </div>
{{/inline}}
{{/admin}}